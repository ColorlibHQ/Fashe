{% unless collection_item_width %}
{% assign collection_item_width = 'text-center' %}
{% endunless %}
<div class="{{ collection_item_width }} ">
  {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
  <a class="block3-img dis-block hov-img-zoom" href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">
    {% if collection.image %}
    {{ collection.image.src | img_url: '360x360' | img_tag: collection_title }}
    {% else %}
    {{ collection.products.first.featured_image | img_url: '360x360' | img_tag: collection_title }}
    {% endif %}
    <p class="text-center">
      <h2 class="text-center">{{ collection.title }}<small> ({{ 'collections.general.items_with_count' | t: count: collection.all_products_count }})</small>
      </h2>
    </p>
  </a>
</div>