<div class="image-block">
  <a href="{{ collection.url }}" class="image-hover-effect">
    {% if collection.image %}
    <img src="{{ collection.image.src | collection_img_url: 'large' }}" alt="{{ collection.title | escape }}" />
    {% else %}
    <img src="{{ 'default-image.jpg' | asset_url }}" alt="{{ collection.title | escape }}" />
    {% endif %}    </a>
</div>
<h3 class="collection-title heading-slide-title brand-title">
  <a href="{{ collection.url }}" title="{{ collection.title | escape }}">{{ collection.title }}</a>
</h3>
