{%- assign assets_url = 'abcdefghi.png' | asset_img_url: '50x' | split: 'abcdefghi_50x.png' -%}
{%- assign files_url  = 'abcdefghi.png' | file_img_url: '50x' | split: 'abcdefghi_50x.png' -%}
<script>
window.themeAssetsUrl = '{{ assets_url[0] }}';
window.filesUrl = '{{ files_url[0] }}';
</script>
{% assign isEnableGloboSearch = true %}
{%- assign isEnableHomeFilter = false -%}
{%- if request.page_type != 'index' -%}{%- assign isEnableHomeFilter = false -%}{%- endif -%}
{%- if isEnableGloboSearch -%}
{%- capture searchTemplate -%}{% render 'globo.filter.search' %}{%- endcapture -%}
{%- unless searchTemplate contains 'Liquid error' -%}
<script id="gspfSearchResult" type="template/html">{{- searchTemplate | replace: "<script>", "<scripttag>" | replace: "</>", "</scripttag>" -}}</script>
{%- endunless -%}
{%- endif -%}
{% if request.page_type == 'collection' or request.page_type == 'search' or isEnableHomeFilter %}
