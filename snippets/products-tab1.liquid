<section class="bgwhite p-t-45 p-b-58" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="sec-title p-b-22">
      {% if section.settings.heading != blank %}  
      <h3 class="m-text5 t-center">{{ section.settings.heading }}</h3>
      {% endif %}
    </div>
    <!-- Tab01 -->
    <div class="tab01">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        {% capture tabs %}{{ section.settings.products_tab_collection1 }},{{ section.settings.products_tab_collection2 }},{{ section.settings.products_tab_collection3 }},{{ section.settings.products_tab_collection4 }},{{ section.settings.products_tab_collection5 }}{% endcapture %}
        {% assign tabs_collection = tabs | split: "," %}
        {% for coll in tabs_collection %}
        {% assign title = collections[coll].title %}
        <li class="nav-item">
          <a class="nav-link {% if forloop.first %}active {% endif %}" data-toggle="tab" href="#tab-{{ forloop.index0 }}" role="tab">{{ title }}</a>
        </li>
        {% endfor %}
      </ul>
      <!-- Tab panes -->
      <div class="tab-content p-t-35">
        <!-- - -->
        {% for coll in tabs_collection %}
        {% assign coll_products = collections[coll].products %}
        <div class="tab-pane fade {% if forloop.first %} show active {% endif %}" id="tab-{{ forloop.index0 }}" role="tabpanel">
          <div class="row">
            {% for product in coll_products limit:section.settings.products_tab_count %}
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
              {% include 'product-grid-item' %}
            </div>
            {% endfor %}
          </div>
          <!-- productTabContent -->
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
